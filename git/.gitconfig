
[user]
	email = phorton@softstackfactory.com
	name = Peter Horton
[alias]
  fixup = "!git log -n 50 --pretty=format:'%h %s' --no-merges | fzf | cut -c -7 | xargs -o git commit --fixup"
  conflicted = '!nvim +Conflicted'
  incoming = !git fetch && git log --oneline ..@{u}
  outgoing = !git fetch && git log --oneline @{u}..
  last = log -1 HEAD --stat
  se = !git rev-list --all | xargs git grep -F
  rhp = reset --hard origin/$(current_branch)
  cnoc = commit -a --amend --no-edit
  restfile = 'reset @~ "$@" && git commit --amend --no-edit'
  forcep =  push --force-with-lease origin $(current_branch)
  nb = checkout -b
  del = branch -D
   ; br = brl
  ; br = switch " $(git brl | fzf | awk '\''{print $1}'\'')"
  brl =  branch --format='%(HEAD) %(color:yellow)%(refname:short)%(color:reset) - %(contents:subject) %(color:green)(%(committerdate:relative)) [%(authorname)]' 
  co = checkout
  c = commit -m
  l = log --graph --pretty='format:%C(red)%d%C(reset) %C(yellow)%h%C(reset) %ar %C(green)%aN%C(reset) %s'
  rename = branch -m
  rh = reset --hard
  groot = rev-parse --show-toplevel
  root = !pwd
	staash = stash --all
	br = !sh -c 'git switch $(git brl | fzf | awk \"{print \\$1}\")'
[core]
	pager = diff-so-fancy | less --tabs=4 -RFX
[interactive]
	diffFilter = diff-so-fancy --patch
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	func = 146 bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[credential "https://github.com"]
	helper = 
	helper = !/home/linuxbrew/.linuxbrew/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/home/linuxbrew/.linuxbrew/bin/gh auth git-credential
[rebase]
	autosquash = true
[rerere]
	enabled = true
[column]
	ui = auto
[branch]
	sort = -committerdate
[maintenance]
	repo = /home/digitaldive/.dotfiles
